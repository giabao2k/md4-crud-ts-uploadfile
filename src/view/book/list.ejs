<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Author</th>
                <th scope="col">Image</th>
              </tr>
            </thead>
            <tbody>
                <% for(let book of books) {%>
              <tr>
                <td><%= book.name%></td>
                <td><%= book.author%></td>
                <td><img src="/<%=book.image%>" width="50px" height="50px" alt=""></td>

                <td><a href="/book/delete/<%=book._id%>" class="btn btn-danger">Delete</a></td>
                <td><a href="/book/update/<%=book._id%>" class="btn btn-primary">Edit</a></td>
                <!-- neu bam vao edit no se dan toi duong dan o href -->

            </tr>
            <%}%>
        </tbody>
    </table>
    <a href="/book/create" class="btn btn-primary">Add</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>


